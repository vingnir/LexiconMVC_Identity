@model IEnumerable<LexiconMVC_ViewModels.Models.Country>

@{
    ViewData["Title"] = "Country";
}

<h1>Country</h1>

<p>
    <a class="btn btn-info btn-sm rounded-0 my-1" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.CountryName
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CountryId" title="Edit" class="btn btn-primary btn-sm rounded-0"> <i class="fa fa-edit"></i></a>
                <a asp-action="Delete" asp-route-id="@item.CountryId" title="Delete" class="btn btn-danger btn-sm rounded-0"> <i class="fa fa-trash"></i></a>
            </td>
            <td>
                
            </td>
        </tr>
}
    </tbody>
</table>
