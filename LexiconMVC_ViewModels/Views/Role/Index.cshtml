@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>


@{
    ViewData["Title"] = "Index";
}



    <h1>Roles</h1>
    <div class="row">
        <div class="col-auto">
            <a class="btn btn-info btn-sm rounded-0 mb-1" asp-action="Create">Create role</a>
           
            <a class="btn btn-info btn-sm rounded-0 mb-1" asp-action="AddUserToRole">Add user to role</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>